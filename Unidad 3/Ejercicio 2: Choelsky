A<-matrix(c(
2,-1,0,
-1,2,-1,
0,-1,2),
nrow =3, byrow=TRUE)

cholesky<-function(A){
  n<-nrow(A)
  L<-matrix(0,n,n)
  for(i in 1:n){
    L[i,i]<-sqrt(A[i,i]-sum(L[i,1:(i-1)]^2))
    if(i<n){
      for(j in (i+1):n){
        L[j,i]<-(A[j,i]-sum(L[j,1:(i-1)]*L[i,1:(i-1)]))/L[i,i]
      }
    }
    
  }
  return(L)
}
L<-cholesky(A)
Lt<-t(L)
comp<-L%*%Lt
comp

D<-matrix(c(
1,2,4,7,
2,13,23,38,
4,13,77,122,
7,38,122,294),
nrow =4, byrow=TRUE)
