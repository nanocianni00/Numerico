 raiz_biseccion = function(a,b,Tol,N=100){
 i = 1
 FA = polinomio(a)
 while (i <= N){
 p = a + (b-a)/2
 FP = polinomio(p)
if (FP*FA==0 | (b-a)/2<Tol){
 a = p
 FA = FP
return(p)
}
i <- i+1
    if(FP*FA >0){
      a <- p
      FA <- FP
    } else {
      b <- p
    }
  }
  return(paste("El metodo fallo luego de", N, "iteraciones"))
}
